package javastudy260109;

import sun.jvm.hotspot.runtime.StaticBaseConstructor;
import sun.security.ec.ECOperations.PointMultiplier.Default;

public class MainMethod {

	int score = 50;
//	static이 붙은 메서드에서는 인스턴스 변수나 인스턴스메서드에서 사용불가 (왜? 만들어지는 시점이 다르기 때문!)
// 	인스턴스 메서드에서는 static 변수, static 메서드 사용 가능
	
	public static void main(String[] args) {
		
		
		System.out.println(score);
		
//		인스턴스 변수 사용		
		Member member = new Member();
			member.name = "김유신";
			member.age = 24;
		
		Member member2 = new Member("이순신",33,"남");
		
//		클래스 변수 사용 (클래스 이름을 직접 사용) 		
		Member.dept = "국어국문과";
		System.out.println(member.dept);
		System.out.println(member2.dept);
		
		System.out.println(member.toString());
		
		//사용자 편의를 위해 기본적으로 toString이 구현되어 있음  
		System.out.println(member2);
		
//		상수(시험 문제에 출제된 내용)
//		변수는 변경 가능하지만 상수는 변경 불가능 
		
		final int num = 0;

//		제어자
//		1. static
//			'공통의'라는 뜻으로 사용되는 제어자
//			static 변수와 static 메서드가 존재하며 static 메서드에서는 static 변수만 사용이 가능하다(인스턴스 변수 사용불가)
//			모든 객체가 공유해야하는 데이터가 필요한 경우이거나 클래스의 대표 데이터롤 사용해야하는 경우 
//			또는 웹과 같이 다중 접속에 의한 과한 생성을 방지를 위해 사용한다

//		2. final
//			'변경할 수 없는'이라는 뜻으로 사용되는 제어자
//			특정 데이터가 실수에 의해서 변경되는 걸 방지하기 위해 또는 개발 과정에서 다른 팀원의 데이터 변경을 방지하기 위한 용도로 사용
//			메서드에 사용할 경우 오버라이딩 불가, 클래스에 사용할 경우 상속 불가


		
//		접근 제어자
//			권한 설정을 위해 사용 (변수, 메서드, 클래스, 인터페이스 등에 사용)
//		
//		1. public**
//			'공공의'라는 뜻으로 사용되는 접근 제어자 (EX, 버스 또는 지하철 공공 와이파이)
//		
//		2. default
//			기본적인 접근 제어자 (인스턴스 변수, 생성자 메서드 앞에 생략되어있음)
//			같은 패키지 안에서만 사용 가능 (다른 패키지에서 사용할 경우 클래스의 경우 import 입력, 메서드의 경우 public 입력 필수)	
		
//		3. protected
//			같은 패키지 안에서만 사용 가능 (단, 상속 관계 경우엔 패키지가 달라도 사용 가능)
//			상속 사용 시 기본적으로 사용되는 접근 제어자
//
//		4. private**
//			클래스 내부에서만 사용 가능 (데이터 입력도 전부 해당 클래스의 중괄호 안에서만 사용 가능)					
//			 
//			사용하는 이유
//				1) 정보 은닉
//				2) 캡술화
		
		
//		추상화
//		1. abstract
//			
//		
//		
//		
//		
//
		
		
		
	}
}
